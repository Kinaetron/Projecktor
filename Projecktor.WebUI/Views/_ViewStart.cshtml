@{
    string controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";

    if(controller == "Home") {
        cLayout = "~/Views/Shared/_LayoutExternal.cshtml";
    }
    else{
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }

    Layout = cLayout;
}