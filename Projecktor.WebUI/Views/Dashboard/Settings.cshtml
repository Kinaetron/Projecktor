@model SettingsViewModel

<p>
    @using (var signupForm = Html.BeginForm("Settings", "Dashboard"))
    {

        @Html.ValidationSummary() <br />
            <label>Username: </label> @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" }) <br />
            <label>Email: </label>    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" }) <br/>
            <label>New Password: </label> @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Password" }) <br />
            <label>Current Password: </label> @Html.PasswordFor(m => m.CurrentPassword, new { placeholder = "Password" }) <br />
            <input type="submit" value="Save" />
    }
</p>
