@model RegisterViewModel

@{
    ViewBag.Title = "Register | Projecktor";
}

<div class="forms">
    @using (var signupForm = Html.BeginForm("Register", "Home"))
    {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary() <br />
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "input" }) <br />
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "input" }) <br />
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "input" }) <br />
            <input type="submit" value="Create Account" />
    }
</div>

<div>
    @Html.ActionLink("Log in", "Login")
</div>
